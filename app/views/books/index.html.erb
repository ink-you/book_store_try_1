<h1>Books</h1>

<table class="table">
  <thead>
    <tr>
      <th>Seller</th>
      <th>Bookcode</th>
      <th>Buyer</th>
      <th>Seller price</th>
      <th>Last price</th>
      <th>Send flag</th>
      <th colspan="3"></th>
    </tr>p
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.seller_id %></td>
        <td><%= book.bookcode_id %></td>
        <td><%= book.buyer_id %></td>
        <td><%= book.seller_price %></td>
        <td><%= book.last_price %></td>
        <td><%= book.send_flag %></td>
        <td><%= link_to 'Show', book, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, class: "btn btn-link" %>
